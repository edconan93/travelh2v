<?xml version="1.0" encoding="utf-8"?>

<!-- Wrapper -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@android:color/white">

	<!-- Title -->
	<ImageView android:id="@+id/title_context"
		android:layout_width="fill_parent" android:layout_height="46dip"
		android:src="@drawable/title_context" />

	<!-- body -->
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		<TableRow>
			<Button android:id="@+id/btnReset" android:layout_width="160dip"
				android:layout_height="33dip" android:background="@drawable/btn_selector_reset" />
			<Button android:id="@+id/btnSave" android:layout_width="160dip"
				android:layout_height="33dip" android:background="@drawable/btn_selector_save" />
		</TableRow>
		<TableRow>
			<ImageView android:src="@drawable/lb_context_temperature"
				android:layout_width="160dip" android:layout_height="45dip" />
			<Spinner android:id="@+id/spinner_temperature"
				android:layout_width="160dip" android:layout_height="45dip"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<ImageView android:src="@drawable/lb_context_weather"
				android:layout_width="160dip" android:layout_height="45dip" />
			<Spinner android:id="@+id/spinner_weather"
				android:layout_width="160dip" android:layout_height="45dip"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<ImageView android:src="@drawable/lb_context_companion"
				android:layout_width="160dip" android:layout_height="45dip" />
			<Spinner android:id="@+id/spinner_companion"
				android:layout_width="160dip" android:layout_height="45dip"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<ImageView android:src="@drawable/lb_context_mood"
				android:layout_width="160dip" android:layout_height="45dip" />
			<Spinner android:id="@+id/spinner_mood"
				android:layout_width="160dip" android:layout_height="45dip"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<ImageView android:src="@drawable/lb_context_familiarity"
				android:layout_width="160dip" android:layout_height="45dip" />
			<Spinner android:id="@+id/spinner_familiarity"
				android:layout_width="160dip" android:layout_height="45dip"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<ImageView android:src="@drawable/lb_context_budget"
				android:layout_width="160dip" android:layout_height="45dip" />
			<Spinner android:id="@+id/spinner_budget"
				android:layout_width="160dip" android:layout_height="45dip"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<ImageView android:src="@drawable/lb_context_travel_length"
				android:layout_width="160dip" android:layout_height="45dip" />
			<Spinner android:id="@+id/spinner_travel_length"
				android:layout_width="160dip" android:layout_height="45dip"
				android:drawSelectorOnTop="true"/>
		</TableRow>
		<TableRow>
			<ImageView android:src="@drawable/lb_context_time"
				android:layout_width="160dip" android:layout_height="45dip" />
			<Spinner android:id="@+id/spinner_time"
				android:layout_width="160dip" android:layout_height="45dip"
				android:drawSelectorOnTop="true"/>
		</TableRow>
	</TableLayout>

</LinearLayout>