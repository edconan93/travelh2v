@model MvcApplication1.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}
<h2>@ViewBag.Message</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/MicrosoftAjax.debug.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.debug.js")" type="text/javascript"></script>

<script type="text/javascript">
    date_obj = new Date();
    date_obj_hours = date_obj.getHours();
    date_obj_mins = date_obj.getMinutes();
    date_obj_time = "' " + date_obj_hours + ":" + date_obj_mins + ":00'";

    $(function () {
        $("#TravelTime").datepicker(
        {
            dateFormat: 'yy-mm-dd' + date_obj_time,
            showStatus: true,
            changeYear: true,
            yearRange: "-20:+0",
            numberOfMonths: 1,
            showWeeks: true,
            highlightWeek: true,
            showAnim: "scale"
        });

        $("#ListPlace").change(function () {
            $.ajax({
                url: '@Url.Action("UpdateForm")',
                type: "POST",
                data: { 'idPlace': $(this).val() },
                success: function (result) {
                    $('#details').html(result);
                }
            })

        });
    });

   

</script>
@using (Html.BeginForm())
{
    <div>
        <fieldset>
            <legend>Rating Information <br /> (Thông tin đánh giá)</legend>
            
            <div id = "left">
            <div class="editor-label">
                @Html.LabelFor(m => m.EmailUser)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.EmailUser)
                @Html.ValidationMessageFor(m => m.EmailUser)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.PlaceId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("ListPlace", (List<SelectListItem>)ViewData["ListPlace"])
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.BudgetId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("ListBudget", (List<SelectListItem>)ViewData["ListBudget"])
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.WeatherId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("ListWeather", (List<SelectListItem>)ViewData["ListWeather"])
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.CompanionId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("ListCompanion", (List<SelectListItem>)ViewData["ListCompanion"])
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.TravelTime)
                <br />Include hour and minute (gồm cả giờ và phút)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.TravelTime)
                <br />
                @Html.ValidationMessageFor(m => m.TravelTime)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Rating)
                <br />From 1-low to 5-high (Từ 1-thấp đến 5-cao)
            </div>
            <div class="editor-field">
                @Html.DropDownList("ListRating", (List<SelectListItem>)ViewData["ListRating"])
            </div>
            <p>
                <input type="submit" value="Rate (Đánh giá)" />
            </p>
            </div>
            <div id = "right">
                Information: (Thông tin:) 
                <br /><br />
                <div id = "details">       
                </div>
            </div>
        </fieldset>
    </div>
}

