<?xml version="1.0" encoding="utf-8"?>

<!-- Wrapper -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/bg">

	<!-- Title -->
	<ImageView android:id="@+id/title_allplaces"
		android:layout_width="fill_parent" android:layout_height="46dip"
		android:src="@drawable/title_allplaces" />
	<Button android:id="@+id/btnRefresh" android:layout_width="46dip"
		android:layout_height="46dip" android:layout_alignParentRight="true"
		android:background="@drawable/btn_selector_refresh" />

	<!-- body -->
	<Button android:id="@+id/btnAz" android:layout_width="80dip"
		android:layout_height="33dip" android:background="@drawable/btn_selector_col_az"
		android:layout_below="@+id/title_allplaces" />
	<Button android:id="@+id/btnRating" android:layout_width="80dip"
		android:layout_height="33dip" android:background="@drawable/btn_selector_col_rating"
		android:layout_toRightOf="@+id/btnAz" android:layout_below="@+id/title_allplaces" />
	<Button android:id="@+id/btnDistance" android:layout_width="80dip"
		android:layout_height="33dip" android:background="@drawable/btn_selector_col_distance"
		android:layout_toRightOf="@+id/btnRating" android:layout_below="@+id/title_allplaces" />
	<Spinner android:id="@+id/spinner_type" android:background="@drawable/btn_selector_col_type"
		android:prompt="@string/type_prompt" android:layout_toRightOf="@+id/btnDistance"
		android:layout_below="@+id/title_allplaces" android:layout_width="80dip"
		android:textColor="@android:color/transparent" android:layout_height="33dip" />
	<!-- ListView -->
	<ListView android:id="@+id/listViewResult"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:divider="@android:color/transparent" android:paddingBottom="2dip"
		android:dividerHeight="1dp" android:layout_below="@+id/btnAz">
	</ListView>

</RelativeLayout>